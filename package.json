{
  "name": "riot-route-build",
  "private": true,
  "version": "3.0.2",
  "description": "Simple isomorphic router",
  "scripts": {
    "pretest": "npm run build",
    "test": "npm run eslint && npm run karma && npm run mocha",
    "prepublish": "npm run build",
    "build": "npm run rollup && npm run uglify && npm run uglify-amd",
    "rollup": "node rollup.js",
    "uglify": "uglifyjs packages/riot-route/route.js --comments --mangle -o packages/riot-route/route.min.js",
    "uglify-amd": "uglifyjs packages/riot-route/amd.route.js --comments --mangle -o packages/riot-route/amd.route.min.js",
    "watch": "chokidar lib/* lib/**/* -c 'npm run build'",
    "eslint": "eslint lib test/specs",
    "karma": "karma start test/karma.conf.js",
    "karma-bs": "BROWSERSTACK=1 karma start test/karma.conf.js",
    "mocha": "mocha test/specs/server.specs.js",
    "coveralls": "RIOT_COV=1 cat ./coverage/lcov.info ./coverage/report-lcov/lcov.info | coveralls"
  },
  "dependencies": {
    "riot-observable": "^3.0.0"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.15",
    "electron-prebuilt": "^1.3.9",
    "eslint": "^3.10.2",
    "expect.js": "^0.3.1",
    "karma": "^1.3.0",
    "karma-browserstack-launcher": "^1.1.1",
    "karma-coverage": "^1.1.1",
    "karma-electron": "^5.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-riot": "^2.0.0",
    "mocha": "^3.1.2",
    "riot": "^3.0.5",
    "rollup": "^0.36.3",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-riot": "^1.1.0",
    "uglify-js": "^2.7.4"
  },
  "author": "Muut, Inc. and other contributors",
  "license": "MIT",
  "bugs": "https://github.com/riot/route/issues",
  "homepage": "http://riotjs.com/api/route/"
}
